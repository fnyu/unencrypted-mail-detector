{
    "manifest_version": 2,
    "name": "__MSG_extensionName__",
    "description": "__MSG_extensionDescription__",
    "version": "0.1",
    "author": "Jakub Krawczyk",
    "applications": {
        "gecko": {
            "id": "UnencryptedMailDetectorTB@krawczyk.me",
            "strict_min_version": "78.0"
        }
    },
    "icons": {
        "64": "images/safety.svg",
        "32": "images/safety.svg",
        "16": "images/safety.svg"
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "options_ui": {
      "page": "options/options.html",
      "open_in_tab": true,
      "browser_style": true
    },
    "permissions": [
      "storage",
      "messagesRead",
      "accountsRead",
      "accountsFolders"
    ],
    "default_locale": "en"
}
